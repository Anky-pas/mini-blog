<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ankypas.miniblog.Mapper.BlogMapper">
    <resultMap id="blogMap" type="ankypas.miniblog.Dao.Blog">
        <id property="blogId" column="blog_id"/>
        <result property="title" column="title"/>
        <result property="text" column="text"/>
        <result property="userId" column="user_id"/>
        <result property="date" column="create_time"/>
        <result property="star" column="star"/>
        <result property="collect" column="collect"/>
        <result property="browse" column="browse"/>
    </resultMap>
    <insert id="add" parameterType="ankypas.miniblog.Dao.Blog">
        insert into blog(title,text,user_id,star,collect,browse) values(#{title},#{text},#{userId},#{star},#{collect},#{browse})
    </insert>
    <delete id="delete" parameterType="int">
        delete from blog where blog_id = #{blogId}
    </delete>
    <update id="update" parameterType="ankypas.miniblog.Dao.Blog">
        update blog set title = #{title}, text = #{text}, create_time = current_timestamp where blog_id = #{blogId}
    </update>
    <select id="search" resultMap="blogMap" resultType="ankypas.miniblog.Dao.Blog">
        select * from blog where title like #{key} or text like #{key} limit #{start},#{size}
    </select>
    <select id="searchById" resultType="ankypas.miniblog.Dao.Blog" parameterType="int" resultMap="blogMap">
        select * from blog where blog_id = #{blogId}
    </select>
    <update id="addStar" parameterType="int">
        update blog set star = star + 1 where blog_id = #{blogId};
    </update>
    <update id="deleteStar" parameterType="int">
        update blog set star = star - 1 where blog_id = #{blogId};
    </update>
    <update id="addCollect" parameterType="int">
        update blog set collect = collect + 1 where blog_id = #{blogId};
    </update>
    <update id="deleteCollect" parameterType="int">
        update blog set collect = collect + 1 where blog_id = #{blogId};
    </update>
    <update id="addBrowse" parameterType="int">
        update blog set browse = browse + 1 where blog_id = #{blogId};
    </update>
    <select id="getUserIdByBlogId" parameterType="int" resultType="int">
        select user_id from blog where blog_id = #{blogId};
    </select>
</mapper>
