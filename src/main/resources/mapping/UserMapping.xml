<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ankypas.miniblog.Mapper.UserMapper">
    <resultMap id="UserOverview" type="ankypas.miniblog.Dao.UserOverview">
        <result property="name" column="user_name"/>
        <result property="sex" column="sex"/>
        <result property="age" column="age"/>
        <result property="profession" column="profession"/>
        <result property="personalProfile" column="personalProfile"/>
    </resultMap>
    <select id="countByName" resultType="int" parameterType="String">
        select count(*) from user where user_name = #{name}
    </select>
    <select id="countByPhone" resultType="int" parameterType="String">
        select count(*) from user where phone = #{phone}
    </select>
    <select id="countByUserId" resultType="int" parameterType="int">
        select count(*) from user where user_id = #{userId}
    </select>
    <select id="countByNameAndPassword" resultType="int" parameterType="String">
        select count(*) from user where user_name = #{name} and password = #{password}
    </select>
    <select id="countByPhoneAndPassword" resultType="int" parameterType="String">
        select count(*) from user where phone = #{phone} and password = #{password}
    </select>
    <select id="getUserIdByNameAndPassword" resultType="int" parameterType="String">
        select user_id from user where user_name = #{name} and password = #{password}
    </select>
    <select id="getUserIdByPhoneAndPassword" resultType="int" parameterType="String">
        select user_id from user where phone = #{phone} and password = #{password}
    </select>
    <select id="getUserNameByUserId" resultType="String" parameterType="int">
        select user_name from user where user_id = #{userId}
    </select>
    <insert id="add" parameterType="ankypas.miniblog.Dao.User">
        insert into user(user_name,sex,age,profession,personal_profile,phone,email,password) values(#{name},#{sex},#{age},#{profession},#{personalProfile},#{phone},#{email},#{password})
    </insert>
    <update id="editPassword" parameterType="String">
        update user set password=#{password} where user_name = #{userName}
    </update>
    <select id="getUserOverviewByUserId" parameterType="int" resultMap="UserOverview" resultType="ankypas.miniblog.Dao.UserOverview">
        select user_name,sex,age,profession,personal_profile from user where user_id = #{userId}
    </select>
</mapper>
